.c-input-avatar
    // &__label
    &__pic
        width 244px
        height 244px
        background $color-blue
        background: rgb(45,56,138);
        background: linear-gradient(128deg, rgba(45,56,138,1) 0%, rgba(0,174,239,1) 100%);
        padding 3px
        border-radius 50%
        display block
        position relative
        &:after
            content ''
            width calc(100% - 6px)
            height calc(100% - 6px)
            position absolute
            background-color #fff
            opacity .8
            left 3px
            top 3px
            border-radius 50%
            z-index 1
        img
            z-index 2
            position relative
    &__input
        appearance none
        display none
    &__pic-100
        width 100%
        height 100%
        background $color-blue
        background: rgb(45,56,138);
        background: linear-gradient(128deg, rgba(45,56,138,1) 0%, rgba(0,174,239,1) 100%);
