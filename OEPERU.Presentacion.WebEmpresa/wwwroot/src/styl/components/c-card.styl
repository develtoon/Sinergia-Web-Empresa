.c-card
    padding 30px
    border-radius 10px
    background-color white
    border 1px solid $color-gray
    &--no-padding
        padding 0
    &--dashed
        border 2px dashed $color-blue
        border-radius 10px
        box-sizing border-box
        padding 15px
    &--estado
        border-radius 40px
        line-height: 22px
        height 22px
        width 90px
        margin auto
        color $color-white
        &-active
            background-color $color-green
        &-inactive
            background-color $color-red
.c-card--2
    border-radius 12px
    border 1px solid $color-gray-50
    padding 18px
    margin 0px
    min-height 250px

