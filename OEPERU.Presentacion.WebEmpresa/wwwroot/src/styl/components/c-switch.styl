.switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}

.switch input { 
  opacity: 0;
  width: 0;
  height: 0;
}

.switch .slider{
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: $color-gray-40;
  -webkit-transition: .4s;
  transition: .4s;
} 

.mapa .slider {
  background-color: $color-primary-skyblue;
}

.switch .slider:before {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background-color: white;
  -webkit-transition: .4s;
  transition: .4s;
}

.switch input:checked + .slider {
  background-color: #2196F3;
}

.switch input:focus + .slider {
  box-shadow: 0 0 1px #2196F3;
}

.switch input:checked + .slider:before {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
  content:"";
}

/* Rounded sliders */
.switch .slider.round {
  border-radius: 34px;
}

.switch .slider.round:before {
  content: "";
  border-radius: 50%;
}


.switch .slider.round.mapa:before {
  font-family: "Material Icons Round"
  content: "";
  border-radius: 50%;
}

.switch
  .icon
    color: white

  .icon_l
    color: $color-primary-skyblue
    position absolute
    font-size: 20px
    cursor: pointer
    left:6px
    bottom: 3px

  .icon_r
    position absolute
    font-size: 20px
    cursor: pointer
    right:7px
    bottom: 3px

.switch input:checked
    &~ .icon_l
        color: white
    &~ .icon_r
        color $color-primary-skyblue