.c-checkbox
    display flex
    align-items center
    

    &__icon
        border 2px solid $color-primary-blue
        border-radius 2px
        width 18px
        height 18px
        position relative
        transition .1s all ease-in
        &--color-state-1
            border 2px solid $color-state-1
        &--color-state-2
            border 2px solid $color-state-2
        &--color-state-3
            border 2px solid $color-state-3
        &--color-state-4
            border 2px solid $color-state-4
        &--color-state-5
            border 2px solid $color-state-5
        &--color-state-6
            border 2px solid $color-state-6
        &--color-state-7
            border 2px solid $color-state-7
        &--color-state-8
            border 2px solid $color-state-8
        &--color-state-9
            border 2px solid $color-state-9
        &--color-state-10
            border 2px solid $color-state-10
        &--color-state-11
            border 2px solid $color-state-11
        &--color-state-12
            border 2px solid $color-state-12        
        &:before,
        &:after
            content ''
            position absolute
            background #fff
            opacity 0
            border-radius 2px
        &:before
            width 2px
            height 6px
            transform rotate(126deg)
            top 9px
            left 3px
        &:after
            width 2px
            height 13px
            -webkit-transform rotate(4deg)
            transform rotate(35deg)
            top 2px
            left 8px
    &__input
        appearance none
        opacity 0
        width 0
        height 0
        &[disabled]
            + .c-checkbox__icon
                border 2px solid $color-gray-50
                background-color $color-gray-10
        &:checked
            &[disabled]
                + .c-checkbox__icon
                    background-color $color-gray-50
            + .c-checkbox__icon
                background-color $color-primary-blue
                &--color-state-1
                    background-color $color-state-1
                &--color-state-2
                    background-color $color-state-2
                &--color-state-3
                    background-color $color-state-3
                &--color-state-4
                    background-color $color-state-4
                &--color-state-5
                    background-color $color-state-5
                &--color-state-6
                    background-color $color-state-6
                &--color-state-7
                    background-color $color-state-7
                &--color-state-8
                    background-color $color-state-8
                &--color-state-9
                    background-color $color-state-9
                &--color-state-10
                    background-color $color-state-10
                &--color-state-11
                    background-color $color-state-11
                &--color-state-12
                    background-color $color-state-12
                &:before,
                &:after
                    transition .2s all ease-in
                    opacity 1
                &:before
                    top 8px
                &:after
                    top 1px
                

