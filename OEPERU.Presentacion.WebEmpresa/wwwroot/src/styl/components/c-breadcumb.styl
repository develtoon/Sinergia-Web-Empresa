.c-breadcumb
    margin-bottom 0px
    background-color #fff
    color $color-gray-60
    display flex
    align-items center
    //box-shadow inset 1px -1px $color-gray-2,inset -1px -1px $color-gray-2,inset 1px 1px $color-gray-2
    +mq($until: "medium")
        // max-width 250px
        overflow hidden
        min-width 55vw
        max-width 80%
        overflow-x scroll
    &__list
        list-style none
        display flex
        padding 0
    
    &__item
        padding 0px 10px
        &.is-div
            padding-right 0
        +mq($until: "medium")
            font-size 19px
        &:first-child
            //color #000
            //--bgc $color-black-1
            font-weight $type-regular
            position relative
            padding 0px
            //margin-right 17px
            &:after
                //content ''
                //border-width 17px
                //border-style solid
                //border-color transparent
                //border-left-color var(--bgc)
                //width 0
                //height 0
                //display block
                //position absolute
                //left 100%
                //top 0
        &:last-child
            font-weight $type-medium
            color $color-gray-80
        a
            transition all 0.08s
            

            &:hover
                color $color-secondary-blue
                border-bottom 2px solid $color-secondary-blue
            