.c-tag
    background $color-gray-2
    font-size 8px
    line-height 10px
    padding 2px 10px
    border-radius 8px
    &--green
        background-color $color-green-light
        color rgba(#000, .4)
    &--red
        background-color $color-red-2
        color #fff

.c-flags
    position relative
    &:hover &__list
        display block
    svg
        width 100%
        height 100%
    &__current,
    &__item span
        display block
        width 34px
        height 34px
    &__item span
        width 24px
        height 24px
    &__list
        padding 0
        list-style none
        background-color #fff
        position absolute
        display none
        top calc(100% + 19px)
        border-radius 5px
        &:after
            content ''
            width 100%
            height 19px
            top -19px
            left 0
            display block
            position absolute
    &__item
        padding 5px 10px
        display flex
        align-items center
        &:hover
            background-color $color-gray-4
        &:first-child
            border-radius 5px 5px 0 0
        &:last-child
            border-radius 0 0 5px 5px
