.u-bg
    &--white
        background-color $color-white
    &--gray
        background-color gray
    &--gray-30
        background-color $color-gray-30
    &--black-1
        background-color: $color-black-1
    &--red
        background-color: $color-red    
    &--green
        background-color: $color-green
    &--green-1
        background-color: $color-green-1
    &--primary-skyblue
        background-color: $color-primary-skyblue

    // H O V E R  E F F E C T
    // &-hover--blue-light:hover
        // background-color darken($c-blue-light, 10)

.u-fade
    animation 600ms ease 500ms showContent
    animation-fill-mode forwards
    opacity 0
    transform translateY(20px)

[c-loading]
    position relative
    &:before
    &:after
        position absolute
    &:before
        content: "";
        // content: "\A.\A..\A...";
        animation: loading 2s steps(4) infinite;
        // content 'Cargando...'
        top 50%
        left calc(50% - 30px)
        // transform: translate(-50%, -50%)
        font-size 14px
        color gray
        z-index 11
    &:after
        content ''
        width 100%
        height 100%
        background rgba(0, 0, 0, 0.18)
        border-radius 12px
        z-index 10
        top 0
        left 0

[c-loading="gray"]:after
    background-color gray

[c-loading="transparent"]:after
    background-color transparent
[c-loading="transparent"]:before
    color transparent


// experimental
[style^="--load"],
[style^="--load-v"]
    position relative
    overflow hidden
[style^="--load"]::after
    content ""
    width var(--load)
    background rgba(106, 97, 207, 0.4)
    position absolute
    left 0
    height 100%

// experimental
[style^="--load-v"]::after
    content ""
    height var(--load)
    background rgba(106, 97, 207, 0.4)
    position absolute
    bottom 0
    width 100%
