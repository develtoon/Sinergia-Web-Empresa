.title,
.subtitle
    font-family: $type-heading
    
.title
    &--18
        $size-height-spacing(18, 24)
        +mq($from: 'medium')
            $size-height-spacing(18, 24)
    &--20
        $size-height-spacing(20, 24)
        +mq($from: 'medium')
            $size-height-spacing(20, 24)
    &--30
        $size-height-spacing(30, 34)
        +mq($from: 'medium')
            $size-height-spacing(30, 34)
    &--40
        $size-height-spacing(35, 47)
        +mq($from: 'medium')
            $size-height-spacing(40, 47)
    &--sm
        $size-height-spacing(24, 29, -0.017em)
        +mq($from: 'medium')
            $size-height-spacing(34, 40.8, 0em)
    &--lg
        $size-height-spacing(45, 67.2, -0.017em)
    &--70
        $size-height-spacing(70, 85)

.subtitle
    &--md
        $size-height-spacing(18, 21.6, -0.015em)
    &--14
        $size-height-spacing(14, 24, 0)

