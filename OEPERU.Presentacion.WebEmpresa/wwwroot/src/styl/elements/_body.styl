body
    font-size 16px
    color $color-black
    min-height 100vh
    position relative
    font-family $type-content
    background-color $color-white
    &[style="overflow: hidden;"]
        padding-right 15px

body.open-modal
    overflow hidden
    touch-action none
    padding-right 15px
    width 100%
    &::-webkit-scrollbar
        display: none;
        background: 0 0;
        width: 0;
